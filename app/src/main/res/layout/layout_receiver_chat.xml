<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="50dp"
    android:padding="10dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiverChatLayoutIvReceiverAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fb"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/receiverChatLayoutLlMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver_chat_drawable"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/receiverChatLayoutIvReceiverImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/receiverChatLayoutTvReceiverMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Receiver send message here"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/receiverChatLayoutTvTimeOfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingBottom="7dp"
            android:text="20:09"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_gravity="end"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>